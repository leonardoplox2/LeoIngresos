<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Barra superior amarilla con título y botón volver -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnVolver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_media_previous"
            android:contentDescription="Volver"
            android:tint="@android:color/black" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nueva venta"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black" />

        <!-- espacio para balance visual -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Contenido (scrollable por si la pantalla es pequeña) -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintBottom_toTopOf="@id/footerPlaceholder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Fecha de venta (abre DatePicker desde Kotlin) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha de venta"
                android:textStyle="bold"
                android:layout_marginTop="8dp"/>
            <EditText
                android:id="@+id/etFechaVenta"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Selecciona fecha"
                android:focusable="false"
                android:clickable="true"
                android:padding="12dp"
                android:background="@android:drawable/edit_text" />

            <!-- Valor -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor (S/)"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/etValor"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="0.00"
                android:inputType="numberDecimal"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"/>

            <!-- Descuento y = Total: fila horizontal -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descuento"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etDescuento"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:hint="Ej: 10 (S/) o 0.1 (10%)"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@android:drawable/edit_text"/>

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="="
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/txtTotalConDescuento"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="S/ 0.00"
                    android:textStyle="bold"
                    android:textSize="16sp" />
            </LinearLayout>

            <!-- Método de pago (ordenado verticalmente) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Método de pago"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <RadioGroup
                android:id="@+id/rgMetodoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="6dp">

                <RadioButton
                    android:id="@+id/rbEfectivo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Efectivo"/>

                <RadioButton
                    android:id="@+id/rbTarjeta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tarjeta"/>

                <RadioButton
                    android:id="@+id/rbTransferencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Transferencia bancaria"/>

                <RadioButton
                    android:id="@+id/rbPlin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plin"/>

                <RadioButton
                    android:id="@+id/rbYape"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Yape"/>

                <RadioButton
                    android:id="@+id/rbOtro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Otro"/>
            </RadioGroup>

            <!-- Concepto/Nombre de la venta -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Concepto de la venta"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>
            <EditText
                android:id="@+id/etConcepto"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Nombre o descripción"
                android:padding="12dp"
                android:background="@android:drawable/edit_text"/>

            <!-- Fila: Botón Crear Venta  + vista de monto (a la derecha) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCrearVenta"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="48dp"
                    android:text="Crear venta"
                    android:background="@drawable/rounded_button"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"/>

                <TextView
                    android:id="@+id/txtTotalPreview"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="S/ 0.00"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginStart="8dp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Placeholder footer para que la ScrollView no tape el footer del layout padre al usar constraint -->
    <View
        android:id="@+id/footerPlaceholder"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
